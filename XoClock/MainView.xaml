<Window x:Class="XoClock.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XoClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="350"
        BorderThickness="0" WindowStyle="None" AllowsTransparency="True" 
        ResizeMode="NoResize" Background="Black" Topmost="True"
        Margin="0" Padding="0"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Viewbox Stretch="Uniform" Margin="0">
            <Label TextOptions.TextRenderingMode="Grayscale" HorizontalAlignment="Center" VerticalAlignment="Center"
                   ClipToBounds="True"  Padding="0" Margin="0" 
                   Background="Black" Foreground="DarkBlue"
                   Content="{Binding Path=DisplayTime, FallbackValue='08:54:01'}"/>
        </Viewbox>
    </Grid>
</Window>
