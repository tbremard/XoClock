<Window x:Class="XoClock.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XoClock"
        mc:Ignorable="d"
        Title="XoClock"
        Height="100" 
        Width="300"
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Topmost="True"
        Background="Transparent"
        Margin="0" 
        Padding="0"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        MouseLeave="Window_MouseLeave"
        MouseWheel="Window_MouseWheel"
        MouseMove="Window_MouseMove"
        MouseDoubleClick="Window_MouseDoubleClick"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
       <Border Name="MyBorder" BorderBrush="DimGray" BorderThickness="3" CornerRadius="20" Margin="0 0 5 5">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="4"></DropShadowEffect>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="BgImage/black-gradient.jpg" TileMode="Tile" />
            </Border.Background>
            <Viewbox Stretch="Uniform" Margin="0" Name="viewbox">
            <StackPanel>
                <TextBlock Name="TxtTime"
                       TextOptions.TextRenderingMode="Grayscale" HorizontalAlignment="Center" VerticalAlignment="Center"
                       ClipToBounds="True"  Padding="2, 0, 2, 0" Margin="0" 
                       Foreground="AliceBlue"
                       FontFamily="./Fonts/#Software Tester 7"
                       FontWeight="Normal"
                       Text="{Binding Path=DisplayTime, FallbackValue='08:54:01'}">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0.1" Direction="315" Color="Red" Opacity="1" BlurRadius="1" />
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Name="TxtDate"
                       TextOptions.TextRenderingMode="Grayscale" HorizontalAlignment="Center" VerticalAlignment="Center"
                       ClipToBounds="True"  Padding="2, 0, 2, 0" Margin="0" 
                       Foreground="AliceBlue"
                       FontFamily="./Fonts/#Software Tester 7"
                       FontSize="6"
                       Text="{Binding Path=DisplayDate, FallbackValue='2022-01-01'}">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0.1" Direction="315" Color="Red" Opacity="1" BlurRadius="1" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Viewbox>
    </Border>
</Window>
    